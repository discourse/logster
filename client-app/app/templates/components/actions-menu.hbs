{{#if actionsInMenu}}
  {{#if showMenu}}
    <div class="actions-menu">
      {{yield}}
    </div>
  {{/if}}
  <button class="expand btn no-text" type="button" {{action 'expandMenu'}}>{{fa-icon 'ellipsis-h'}}</button>
  {{#if showShare}}
    <button class="share btn" type="button" {{action "share"}}>{{fa-icon "share"}}<span>Share</span></button>
  {{/if}}
{{else}}
  {{yield}}
  {{#if showShare}}
    <button class="share btn" type="button" {{action "share"}}>{{fa-icon "share"}}<span>Share</span></button>
  {{/if}}
{{/if}}
