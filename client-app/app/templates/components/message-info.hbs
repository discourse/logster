<div class="message-info">
  <TabbedSection @onTabChange={{this.tabChanged}}>
    <TabContents @name="info" @hint="show info" @currentMessage={{@currentMessage}}>
      {{#if @showTitle}}
        <h3>Message
          {{#if @currentMessage.showCount}}
            ({{@currentMessage.count}} copies reported)
          {{/if}}
        </h3>
      {{/if}}

      <pre>{{@currentMessage.message}}</pre>
    </TabContents>

    <TabContents @name="backtrace" @defaultTab="true" @hint="show backtrace" @currentMessage={{@currentMessage}}>
      {{#if @showTitle}}
        <h3>Backtrace</h3>
      {{/if}}

      <pre><BackTrace
        class="backtrace"
        @backtrace={{@currentMessage.backtrace}}
        @env={{@currentMessage.env}}
      /></pre>
    </TabContents>

    <TabContents @className="env" @name="env" @hint="show environment" @currentMessage={{@currentMessage}}>
      {{#if @currentMessage}}
        {{#if @currentMessage.env}}
          {{#if @showTitle}}
            <h3>Env</h3>
          {{/if}}

          <EnvTab
            @message={{@currentMessage}}
            @currentEnvPosition={{@currentEnvPosition}}
            @envChangedAction={{@envChangedAction}}
          />
        {{else if @loadingEnv}}
          Loading env...
        {{else}}
          No env for this message.
        {{/if}}
      {{/if}}
    </TabContents>
  </TabbedSection>

  {{#if @currentMessage}}
    <div class='message-actions'>
      <ActionsMenu @actionsInMenu={{@actionsInMenu}} @showShare={{@showShare}} @share={{this.share}}>
        {{#each this.buttons as |btn|}}
          <button class="{{btn.klass}} btn {{if btn.danger 'danger' ''}}" type="button" {{on "click" btn.action}}>
            <FaIcon @icon={{btn.icon}} @prefix={{btn.prefix}} />
            <span>{{btn.label}}</span>
          </button>
        {{/each}}
      </ActionsMenu>
    </div>
  {{/if}}
</div>
